<h1>Post a Secret</h1>
<%= flash.now[:errors] %>

<form action="<%= secrets_url %>" method="post" accept-charset="utf-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="title">Title</label>
    <input type="text" name="secret[title]" value="<%= @secret.title %>" id="title">

    <input type="hidden" name="secret[author_id]" value="<%= current_user.id %>">
    <input type="hidden" name="secret[recipient_id]" value="<%= @user_id %>" id="secret[recipient_id]">


    <p><input type="submit" value="Continue &rarr;"></p>
</form>